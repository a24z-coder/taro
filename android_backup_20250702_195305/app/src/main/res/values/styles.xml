<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the Flutter UI initializes -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the first activity (and nothing else). -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Theme applied to the Flutter Activity when the Flutter UI is displayed -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Background behind Flutter's rendering when not showing an interstitial page -->
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources> 